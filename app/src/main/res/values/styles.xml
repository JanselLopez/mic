<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="text_presentation_viewpager">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorBond</item>
    </style>
    <style name="text_lections">
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorTextLections</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTabTextAppearance" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorTabMenuIcon</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
